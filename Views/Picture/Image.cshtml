@model UploadImages

@{
    ViewBag.Title = "Upload Image";
    Layout = "_AdminLayout";
}

<form method="post" enctype="multipart/form-data" asp-action="Picture">
    <input type="hidden" asp-for="RecipeId" />
    <b><label asp-for="Image" style="color:#019966">Upload Image</label><p></p></b>
    <input type="file" class="align-self-center" asp-for="Image" /><p></p>
    <button type="submit" class="btn btn-danger btn-sm" style="background-color:#019966">Submit</button>
</form><p></p>
