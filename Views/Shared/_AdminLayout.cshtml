<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/IndexStyle.css" />
    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon">
</head>
<body class="text-center" style="color:#666666">
    <div id="allPage">
        <br />
        <div class="text-center">
            <a href='@Url.Action("Index")'>
                <img src='@Url.Content("~/images/recipesLog.jpg")' />
            </a>
        </div>
        <br />
        <div style="text-align:right">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-primary"
                   asp-controller="Account" asp-action="Logout" style="background-color:#019966" >Log Out</a>
            }
        </div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success mt-1">@TempData["message"]</div>
        }
        <div>
            @RenderBody()
        </div><p></p>
        <h5 style="color:#666666">
            To go back to Home Page<a class="nav-link" asp-controller="Admin" asp-action="Index"
                                      asp-route-id="@ViewBag.recipeId" style="color:#019966">Click here</a>
        </h5>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; COMP 229. 2019 Recipes. Amel Mohamed. All rights reserved</p>

    </footer>
</body>
</html>